          <%= user.own_photos.count %>
        </span>
      <% end %>
  
    <% end %>
  </li>

  <li class="nav-item">
    <%=
      active_link_to liked_path(user.username),
        class: "nav-link" do %>

      Liked
      
      <% if current_user.leaders.find_by(username: @user.username) != nil || current_user.id == @user.id || @user.private == false %>
        <span class="badge badge-pill badge-secondary">
            <%= user.likes.count %>
        </span>
       <% end %>
    <% end %>
  </li>
